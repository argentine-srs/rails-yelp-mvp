<h2><%= @restaurant.name %></h2>
<p>Category: <%= @restaurant.category.capitalize %></p>
<p>Address: <%= @restaurant.address %></p>
<p>Phone number: <%= @restaurant.phone_number %></p>
<h3>Reviews</h3>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">"<%= review.content %>" <br> <%= review.rating %>/5</li>
  <% end %>
</ul>
<hr>
<h3>How would you review <%= @restaurant.name %>?</h3>
<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: Review::RATES %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>

<div>
  <%= link_to "Back to list", restaurants_path %>
</div>
